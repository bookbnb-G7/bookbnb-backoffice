{
  "extends": [
    "eslint:recommended", 
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended"
  ], 
  "rules": {
    "react/prop-types": 0,
    "no-console": 1,
    "prettier/prettier": "error",
    "react-hooks/rules-of-hooks": 2,
    "react-hooks/exhaustive-deps": 1  
  },
  "plugins": [
    "import", 
    "react", 
    "prettier",
    "jsx-a11y", 
    "react-hooks"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "commonjs": true
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
